<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Tailwind CDN -->
        <link rel="stylesheet" href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css" />
        <title>Todo List</title>
    </head>
    <body>
        <div class="max-w-md mx-auto bg-white shadow-lg rounded-lg overflow-hidden mt-16">
            <div class="px-4 py-2">
                <h1 class="text-gray-800 font-bold text-2xl uppercase">To-Do List</h1>
            </div>
            <form class="w-full max-w-sm mx-auto px-4 py-2">
                <div class="flex items-center border-b-2 border-teal-500 py-2">
                    <input
                        class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none"
                        type="text" placeholder="Add a task" id="taskInput">
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" id="addBtn">
                        Add
                    </button>
                </div>
            </form>

            <!-- Items list -->
            <div id="tasks">
                <ul class="divide-y divide-gray-200 px-4">
                    <% todos.forEach(todo => { %>
                        <li class="py-4">
                            <div class="flex items-center">
                                <input type="checkbox"
                                    class="h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded">
                                <label for="<%= todo.id %>" class="ml-3 block text-gray-900">
                                    <span class="text-lg font-medium"><%= todo.title %></span>
                                </label>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            </div>
            
        </div>
    </body>
</html>



